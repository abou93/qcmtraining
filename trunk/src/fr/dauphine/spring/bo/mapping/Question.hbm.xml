<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="fr.dauphine.spring.bo">
	<class name="Question" table="QUESTION">
		<!-- Clé générée automatiquement par Hibernate -->
		<id name="id" type="string">
			<column name="ID_QUESTION" sql-type="char(32)" not-null="true" />
			<generator class="uuid.hex" />
		</id>
		<timestamp name="version" column="VERSION" unsaved-value="null" />
		<property name="libelle">
			<column name="LIBELLE" length="1000" not-null="true" />
		</property>
		<!-- property name="nombreDeParticipants">
			<formula>
				SELECT COUNT(ID) FROM 
			</formula>
		</property-->
		<bag name="listResponse" lazy="true" inverse="true" cascade="all" >
			<key column="ID_QUESTION" />
			<many-to-many class="fr.dauphine.spring.bo.Reponse" column="ID_REPONSE" />
		</bag>
	</class>
</hibernate-mapping>
